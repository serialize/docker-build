#!/bin/bash

cd $(dirname $0)/../../

export ROOT_DIR="$(pwd)"
export BUILD_DIR=$ROOT_DIR/build
export BUILD_BIN_DIR=$BUILD_DIR/bin
export PATH=$BUILD_BIN_DIR:$PATH
export DOCKER_USER=serialize
export DOCKER_BIN=/usr/bin/docker

export BUILD_MINI_BIN=build-minimal
export BUILD_IMG_BIN=build-image
export BUILD_IMGS_BIN=build-images
export BUILD_AUR_BIN=build-aur
