#!/bin/bash
. $(dirname $0)/set-env

dir=$(get-build-dir $1 $2)
name=$(get-image-name $1 $2)

echo ""
echo "#-----------------------------------------------------------------------------------"
echo "# building image..."
printf '# name:   %s\n' $name 
printf '# path:   %s\n' $dir 
echo "#-----------------------------------------------------------------------------------"

$DOCKER_BIN build -t $name $dir
